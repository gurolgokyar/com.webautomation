<suite name="controlGroup" parallel="method" thread-count="2">
    <test name="testingWithChrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="controlGroupTest.ToolBarPageTest"/>
                <methods>
                    <include name="selectTheZoomValue"/>
                    <include name="selectTheHighLight"/>
                    <include name="selectTheColo"/>
                </methods>
        </classes>
    </test>

    <test name="testingWithEdge">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="controlGroupTest.ToolBarPageTest"/>
                <methods>
                    <include name="selectTheZoomValue"/>
                    <include name="selectTheHighLight"/>
                    <include name="selectTheColo"/>
                </methods>
        </classes>
    </test>
</suite>